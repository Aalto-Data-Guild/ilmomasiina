extends ../layout.pug

block mainContent
	div.content-block
		p.bodyText You have entered the event #{event.title} from the queue.
	div.content-block
		p.bodyText Event information:
		ul
			li #[strong Event:] #{event.title}
			li #[strong Location:] #{event.location}
			if date
				li #[strong Time:] #{date}
	div.content-block
		p.bodyText If you want to edit or cancel your registration, you can do it by pressing this #[a(href=cancelLink) link].
